
<style>
  .container
  {
   box-shadow: lightblue;
  text-align: center;
  }
</style>
<form action method="POST">
  <div class="container">
    <h1>Create Account</h1>
    <hr>
    <label for="name1"><b> Name</b></label>
    <input type="text" placeholder="Enter first name" name="N1" id="N1" >
  {{#each msg}}
                            <div class="error">{{this}}</div>
                            {{/each}}
 <br>
    <label for="email"><b>Email</b></label>
    <input type="text" placeholder="Enter Email" name="email" id="email" >
  {{#each msg1}}
                            <div class="error">{{this}}</div>
                            {{/each}}
 <br>
    <label for="psw"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="psw" id="psw">
{{#each msg2}}
                            <div class="error">{{this}}</div>
                            {{/each}}
 <br>
    <label for="psw-repeat"><b>Re-enter Password</b></label>
    <input type="password" placeholder="Re-enter Password" name="pswrepeat" id="pswrepeat" >
    
    
{{#each msg3}}
                            <div class="error">{{this}}</div>
                            {{/each}}
<hr>
    <button type="submit" class="registerbtn">SIGN UP</button>
  </div>
  
 
  <div class="container signin">
    <center><p>Already have an account? <a href="/login">Sign in</a>.</p></center>
  </div>
</form>

